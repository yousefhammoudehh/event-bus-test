{
  "name": "olive-postgres-outbox",
  "config": {
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
    "tasks.max": "1",

    "database.hostname": "${env:DB_HOST}",
    "database.port": "${env:DB_PORT|5432}",
    "database.user": "${env:DB_USER}",
    "database.password": "${env:DB_PASSWORD}",
    "database.dbname": "${env:DB_NAME}",
    "database.server.name": "olive-pg",

    "plugin.name": "pgoutput",
    "slot.name": "olive_outbox_slot",
    "publication.name": "olive_outbox_pub",

    "tombstones.on.delete": "false",

    "table.include.list": "public.event_outbox",

    "transforms": "outbox,unwrap",
    "transforms.outbox.type": "io.debezium.transforms.outbox.EventRouter",

    "transforms.outbox.table.fields.additional.placement": "headers:header,aggregate_id:header:id",
    "transforms.outbox.route.by.field": "aggregate_type",
    "transforms.outbox.route.topic.replacement": "${routedByValue}",
    "transforms.outbox.key.headers": "id",

    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
    "transforms.unwrap.drop.tombstones": "true",
    "transforms.unwrap.delete.handling.mode": "none"
  }
}
